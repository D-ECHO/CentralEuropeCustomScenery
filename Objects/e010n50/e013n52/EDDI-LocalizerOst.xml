<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

 <path>EDDI-LocalizerOst.ac</path>
 
 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>19000</max-m>
 </animation>
 
 <animation>
     <type>alpha-test</type>
     <alpha-factor>0.01</alpha-factor>
 </animation>

	<animation>
		<type>select</type>
		<object-name>LichtRot</object-name>
		<condition>
			<or>
				<greater-than>
					<property>sim/time/sun-angle-rad</property>
					<value>1.57</value>
				</greater-than>

				<less-than>
					<property>environment/visibility-m</property>
					<value>1300.00</value>
				</less-than>
			</or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>GlasRotLicht</object-name>
		<condition>
			<or>
				<greater-than>
					<property>sim/time/sun-angle-rad</property>
					<value>1.57</value>
				</greater-than>

				<less-than>
					<property>environment/visibility-m</property>
					<value>1300.00</value>
				</less-than>
			</or>
		</condition>
	</animation>
 
	<model>
		<path>Models/Effects/pos_lamp_red_light_2st.xml</path>
		<offsets>
			<x-m>  11.8633 </x-m>
			<y-m> 0.0417368 </y-m>
			<z-m>  2.12035 </z-m>
			<pitch-deg> 0.00 </pitch-deg>
			<heading-deg> 0.00 </heading-deg>
		</offsets>
	</model>
	
	<model>
		<path>Models/Effects/pos_lamp_red_light_2st.xml</path>
		<offsets>
			<x-m>  -11.8633 </x-m>
			<y-m> 0.0417368 </y-m>
			<z-m>  2.12035 </z-m>
			<pitch-deg> 0.00 </pitch-deg>
			<heading-deg> 0.00 </heading-deg>
		</offsets>
	</model>
	

</PropertyList>