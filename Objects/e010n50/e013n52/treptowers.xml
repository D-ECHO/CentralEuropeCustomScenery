<?xml version="1.0"?>

<PropertyList>

  <path>treptower.ac</path>

  <animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>40000</max-m>
  </animation>

  <animation>
	<type>alpha-test</type>
	<alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
	<name>LightedParts</name>
	<object-name>RedLight1</object-name>
	<object-name>RedLight2</object-name>
	<object-name>RedLight3</object-name>
	<object-name>RedLight4</object-name>
	<object-name>Logo1-lit</object-name>
	<object-name>Logo2-lit</object-name>
	<object-name>Logo3-lit</object-name>
	<object-name>Logo4-lit</object-name>
  </animation>

  <animation>
	<type>select</type>
	<object-name>LightedParts</object-name>
	<condition>
	  <greater-than>
		<property>/sim/time/sun-angle-rad</property>
		<value>1.57</value>
	  </greater-than>
	</condition>
  </animation>

  <animation>
	<type>select</type>
	<object-name>Logo1</object-name>
	<object-name>Logo2</object-name>
	<object-name>Logo3</object-name>
	<object-name>Logo4</object-name>
	<condition>
	  <less-than-equals>
		<property>/sim/time/sun-angle-rad</property>
		<value>1.57</value>
	  </less-than-equals>
	</condition>
  </animation>

  <!-- light parameters -->

  <animation>
	<type>translate</type>
	<object-name>RedLight1</object-name>
	<offset-m>132.1406</offset-m>
	<axis>
	  <x>16.75</x>
	  <y>16.75</y>
	  <z>130</z>
	</axis>
  </animation>

  <animation>
	<type>billboard</type>
	<object-name>RedLight1</object-name>
	<spherical type="bool">true</spherical>
  </animation>

  <animation>
	<type>dist-scale</type>
	<object-name>RedLight1</object-name>
	<interpolation>
	  <entry><ind>0</ind><dep>0.5</dep></entry>
	  <entry><ind>1000</ind><dep>1</dep></entry>
	  <entry><ind>16000</ind><dep>10</dep></entry>
	</interpolation>
  </animation>

  <animation>
	<type>translate</type>
	<object-name>RedLight2</object-name>
	<offset-m>132.1406</offset-m>
	<axis>
	  <x>-16.75</x>
	  <y>16.75</y>
	  <z>130</z>
	</axis>
  </animation>

  <animation>
	<type>billboard</type>
	<object-name>RedLight2</object-name>
	<spherical type="bool">true</spherical>
  </animation>

  <animation>
	<type>dist-scale</type>
	<object-name>RedLight2</object-name>
	<interpolation>
	  <entry><ind>0</ind><dep>0.5</dep></entry>
	  <entry><ind>1000</ind><dep>1</dep></entry>
	  <entry><ind>16000</ind><dep>10</dep></entry>
	</interpolation>
  </animation>

  <animation>
	<type>translate</type>
	<object-name>RedLight3</object-name>
	<offset-m>132.1406</offset-m>
	<axis>
	  <x>-16.75</x>
	  <y>-16.75</y>
	  <z>130</z>
	</axis>
  </animation>

  <animation>
	<type>billboard</type>
	<object-name>RedLight3</object-name>
	<spherical type="bool">true</spherical>
  </animation>

  <animation>
	<type>dist-scale</type>
	<object-name>RedLight3</object-name>
	<interpolation>
	  <entry><ind>0</ind><dep>0.5</dep></entry>
	  <entry><ind>1000</ind><dep>1</dep></entry>
	  <entry><ind>16000</ind><dep>10</dep></entry>
	</interpolation>
  </animation>

  <animation>
	<type>translate</type>
	<object-name>RedLight4</object-name>
	<offset-m>132.1406</offset-m>
	<axis>
	  <x>16.75</x>
	  <y>-16.75</y>
	  <z>130</z>
	</axis>
  </animation>

  <animation>
	<type>billboard</type>
	<object-name>RedLight4</object-name>
	<spherical type="bool">true</spherical>
  </animation>

  <animation>
	<type>dist-scale</type>
	<object-name>RedLight4</object-name>
	<interpolation>
	  <entry><ind>0</ind><dep>0.5</dep></entry>
	  <entry><ind>1000</ind><dep>1</dep></entry>
	  <entry><ind>16000</ind><dep>10</dep></entry>
	</interpolation>
  </animation>

</PropertyList>
