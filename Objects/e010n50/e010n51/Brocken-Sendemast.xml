<?xml version="1.0"?>

<PropertyList>

 <path>Brocken-Sendemast.ac</path>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>30000</max-m>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Flash</object-name>
  <condition>
   <greater-than>
    <property>/sim/time/sun-angle-rad</property>
    <value>1.57</value>
   </greater-than>
  </condition>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>Flash</object-name>
  <condition>
   <greater-than>
    <property>/sim/time/sun-angle-rad</property>
    <value>1.57</value>
   </greater-than>
  </condition>
  <property>/sim/time/elapsed-sec</property>
  <factor>60.0</factor>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>128</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
  
</PropertyList>
