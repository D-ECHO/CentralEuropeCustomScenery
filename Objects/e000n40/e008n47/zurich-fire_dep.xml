   <animation>
    <type>material</type>
    <object-name>Tore</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red> 0.8 </red>
      <green> 0.1 </green>
      <blue> 0.1 </blue>
    </emission>
  </animation>

