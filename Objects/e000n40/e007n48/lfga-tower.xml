<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

 <path>lfga-tower.ac</path>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>5000</max-m>
 </animation>

 <animation>
    <type>material</type> 
    <object-name>vitres</object-name>
    <object-name>toweranex</object-name> 
    <object-name>tower</object-name> 
    <condition>		
        <greater-than>		
            <property>/sim/time/sun-angle-rad</property>
            <value>1.57</value>
        </greater-than>
    </condition>
    <emission>	
        <red>0.33</red>	
        <green>0.3</green>	
        <blue>0.25</blue>
    </emission>
</animation>

<animation>
   <type>textranslate</type> 
   <object-name>toweranex</object-name> 
   <object-name>tower</object-name> 
   <property>/sim/time/sun-angle-rad</property>
   <step> 1.57 </step>
   <factor>0.318471338</factor>
   <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
   </center>
   <axis> 
     <x> -1 </x> 
     <y>  0 </y> 
     <z>  0 </z> 
   </axis> 
 </animation>
</PropertyList>

