<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>
	<path>landtag_stuttgart.ac</path>

	<animation>
		<type>range</type>
		<min-m>0</min-m>
		<max-m>25000</max-m>
	</animation>

<animation>
    <type>material</type>
    <object-name>glasfassade_oben</object-name>
    <object-name>glasfassade_unten</object-name>
    <condition>
        <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.47</value>
        </greater-than>
    </condition>
    <emission>	
	<red>0.55</red>	
	<green>0.5</green>	
	<blue>0.4</blue>
    </emission>
</animation>

<animation>
    <type>material</type>
    <object-name>boden</object-name>
    <object-name>pfeiler_innen</object-name>
    <condition>
        <greater-than>
          <property>/sim/time/sun-angle-rad</property>
          <value>1.47</value>
        </greater-than>
    </condition>
    <emission>	
	<red>0.25</red>	
	<green>0.25</green>	
	<blue>0.25</blue>
    </emission>
</animation>

</PropertyList>
