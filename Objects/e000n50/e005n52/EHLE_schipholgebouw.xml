<?xml version="1.0"?>
<PropertyList>

<path>EHLE_schipholgebouw.ac</path>

<animation>
	<type>rotate</type>
 	<object-name>flag</object-name> 
	<property>/environment/config/boundary[0]/entry/wind-from-heading-deg</property>
	<offset-deg>180</offset-deg>
	<axis>
		<x>0</x>
		<y>0</y>
		<z>-1</z>
	</axis>
	<center>
		<x-m> 0.0  </x-m>
		<y-m>29.405</y-m>
		<z-m>17.100</z-m>
	</center>
</animation>

