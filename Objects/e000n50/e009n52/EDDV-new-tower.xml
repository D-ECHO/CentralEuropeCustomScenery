<?xml version="1.0" encoding="UTF-8" ?>
<PropertyList>
 <path>EDDV-new-tower.ac</path>
 
<animation> 
	<type>rotate</type> 
	<object-name>RADAR</object-name> 
	<property>/sim/time/elapsed-sec</property> 
	<factor>200.0</factor> 
	<center> <x-m>0</x-m> <y-m></y-m> <z-m>70</z-m> </center> 
	<axis> <x>0</x> <y>0</y> <z>1</z> </axis> 
</animation>

<animation> 
	<type>textranslate</type> 
	<object-name>EDDV_new_tower</object-name> 
	<object-name>EDDV_tower_glass</object-name> 
	<property>/sim/time/sun-angle-rad</property> 
	<factor>0.3125</factor> <step>1.6</step> 
	<axis> <x>1</x> <y>0</y> </axis> 
</animation> 

<animation> 
	<type>material</type> 
	<object-name>EDDV_new_tower</object-name> 
	<object-name>EDDV_tower_glass</object-name> 
	<condition> <greater-than> <property>/sim/time/sun-angle-rad</property> <value>1.6</value> </greater-than> </condition> 
	<emission> <red> 1.0 </red> <green> 1.0 </green> <blue> 1.0 </blue> </emission> 
</animation>

</PropertyList>
