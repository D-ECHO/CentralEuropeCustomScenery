 <!-- Die VW-Logos auf der obersten Plattform rotieren langsam. Beim
      echten Turm ist der Antrieb schon lange kaputt, aber in der
      Simulation ist die Reparatur zum Glück einfach :-) -->
 <animation>
  <type>rotate</type>
  <object-name>VWLogos</object-name>
  <property>/sim/time/elapsed-sec</property>
  <factor>2.0</factor>
  <center>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <!-- Nachts die Leuchtreklamen anschalten. -->
 <animation>
   <type>material</type>
   <object-name>Mesh</object-name>
   <condition>
     <greater-than>
       <property>/sim/time/sun-angle-rad</property>
       <value>1.57</value>
     </greater-than>
   </condition>
   <global type="bool">true</global>
   <emission>
     <red>1</red>
     <green>1</green>
     <blue>1</blue>
   </emission>
   <texture>vwlogo.rgb</texture>
 </animation>
 
