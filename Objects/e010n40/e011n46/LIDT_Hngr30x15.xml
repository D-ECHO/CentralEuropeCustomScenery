<?xml version="1.0"?>

<PropertyList>

  <path>LIDT_Hngr30x15.ac</path>

<animation> 
    <type>textranslate</type> 
    <object-name>Porte</object-name> 
	<object-name>Portoni</object-name>
	<object-name>finestre</object-name>
	
	 
    <property>/sim/time/sun-angle-rad</property>
    <step> 1.57 </step>
    <factor>0.318471338</factor>
    <center>
     <x-m> 0 </x-m>
     <y-m> 0 </y-m>
     <z-m> 0 </z-m>
    </center>
    <axis> 
      <x> -1 </x> 
      <y>  0 </y> 
      <z>  0 </z> 
    </axis> 
  </animation>
 
  <animation>
    <type>material</type>
   <object-name>Porte</object-name> 
	<object-name>Portoni</object-name>
	<object-name>finestre</object-name>
    <condition>
      <greater-than>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </greater-than>
    </condition>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Porte</object-name> 
	<object-name>Portoni</object-name>
	<object-name>finestre</object-name>
    <condition>
      <less-than-equals>
        <property>/sim/time/sun-angle-rad</property>
        <value>1.57</value>
      </less-than-equals>
    </condition>
    <emission>
      <red>   0.0 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>
 

</PropertyList>
