<?xml version="1.0" encoding="UTF-8" ?>
<PropertyList>
       
<path>INNSBRUCK_mpreis_market.ac</path>

<!-- night window illumination - inside building textures -->
<animation>
	<type>material</type> 
	<object-name>mpreis_int_01</object-name>
	<object-name>mpreis_int_02</object-name>
	<condition>		
	<greater-than>		
	<property>/sim/time/sun-angle-rad</property>
	<value>1.57</value>
	</greater-than>
	</condition>
	<emission>	
	<red>0.7</red>	
	<green>0.6</green>	
	<blue>0.4</blue>
	</emission>
</animation>

<!-- MPREIS signs illumination -->
<animation>
	<type>material</type> 
	<object-name>mpreis_01</object-name>
	<object-name>mpreis_02</object-name>
	<condition>		
	<greater-than>		
	<property>/sim/time/sun-angle-rad</property>
	<value>1.55</value>
	</greater-than>
	</condition>
	<emission>	
	<red>0.8</red>	
	<green>0.8</green>	
	<blue>0.8</blue>
	</emission>
</animation>

<!-- LOD -->
<animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>12000</max-m>
</animation>

       
</PropertyList>